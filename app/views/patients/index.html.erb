<% if user_signed_in? %>
  <% if current_user.receptionist? %>
    <%= link_to 'New Patient', new_patient_path, class: "btn btn-link" %>
  <% end %>
<% end %>

<table class="table table-stripped">
  <thead>
    <tr>
      <th>S.No.</th>
      <th>Name</th>
      <th>Date of Birth</th>
      <th>Age</th>
      <th>Gender</th>
      <th>Mobile No.</th>
      <th>Address</th>
      <th>City</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.id %></td>
        <td><%= patient.name %></td>
        <td><%= patient.date_of_birth %></td>
        <td><%= patient.age %></td>
        <td><%= patient.gender %></td>
        <td><%= patient.mobile_no %></td>
        <td><%= patient.address %></td>
        <td><%= patient.city %></td>
        <td><%= link_to 'Show', patient_path(patient), class:"btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient), class:"btn btn-link" %></td>
        <td><%= button_to 'Delete', patient_path(patient), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
